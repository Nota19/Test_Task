mvn<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<entity package-path="ru.hmel">
	<namespace>store</namespace>
	<entity name="Employee" uuid="true" local-service="true" remote-service="true">
		<!-- PK fields -->
		<column name="employee_id" type="long" primary="true" />
		<column name="lastname" type="String" />
		<column name="firstname" type="String" />
		<column name="patronymic" type="String" />
		<column name="birthdate" type="date" />
		<column name="position" type="String" />
		<column name="gender" type="boolean" />

		<finder name="employee_id" return-type="Collection">
			<finder-column name="employeeid" />
		</finder>

		<finder name="position" return-type="Collection">
			<finder-column name="id" />
		</finder>


	</entity>

	<entity name="Electronics" uuid="true" local-service="true" remote-service="true">
		<column name="electronics_id" type="long" primary="true" />
		<column name="name" type="String" />
		<column name="etype" type="String" />
		<column name="price" type="long" />
		<column name="count" type="long" />
		<column name="inStock" type="boolean" />
		<column name="archive" type="boolean" />
		<column name="description" type="String" />

		<finder name="etype" return-type="Collection">
			<finder-column name="id"/>
		</finder>

	</entity>

	<entity name="Purchase" uuid="true" local-service="true" remote-service="true">
		<column name="Purchase_id" type="long" primary="true"/>
		<column name="electroid" type="long" />
		<column name="employeeid" type="long" />
		<column name="purchaseDate" type="dateTime" />
		<column name="type" type="long" />

		<finder name="employeeid" return-type="Collection">
			<finder-column name="employee_id" />
		</finder>

		<finder name="electroid" return-type="Collection">
			<finder-column name="electronics_id"/>
		</finder>

		<finder name="type" return-type="Collection">
			<finder-column name="id"/>
		</finder>

	</entity>

	<entity name="PositionType" uuid="true" local-service="true" remote-service="true" />
		<column name="id" type="long" primary="true" />
		<column name="name" type="String" />
	</entity>

	<entity name="ElectroType" uuid="true" local-service="true" remote-service="true" >
		<column name="id" type="long" primary="true" />
		<column name="name" type="String" />

		<finder name="id" return-type="Collection">
			<finder-column name="etype" />
		</finder>

	</entity>

	<entity name="PurchaseType" uuid="true" local-service="true" remote-service="true" 	>
		<column name="id" type="long" primary="true" />
		<column name="name" type="String" />
	</entity>

	<entity name="ElectroEmployee" uuid="true" local-service="true" remote-service="true" >
		<column name="employeeid" type="long" primary="true" />
		<column name="etype" type="long" />



		<!-- Order -->

	<order by="asc">
	<order-column name="purchaseDate" />
	</order>
		<!-- References -->

		<reference package-path="com.liferay.portlet.asset" entity="AssetEntry" />
		<reference package-path="com.liferay.portlet.asset" entity="AssetTag" />
	</entity>
</service-builder>